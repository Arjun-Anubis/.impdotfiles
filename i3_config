#Logout

bindsym $mod+shift+e exec i3-msg exit

#Reboot

bindsym ctrl+$alt+Delete exec reboot

#Poweroff

bindsym ctrl+$alt+shift+Delete exec poweroff

#Lock


#Orientation

bindsym $mod+v split vertical
