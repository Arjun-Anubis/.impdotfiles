#Interacting with windows

bindsym $mod+shift+q [con_id="__focused__"] kill
bindsym $mod+$alt+q [con_id="__focused__"] exec --no-startup-id kill -9 $(xdotool getwindowfocus getwindowpid)

#Reload

bindsym $mod+shift+r restart

#Keyboard Layout

